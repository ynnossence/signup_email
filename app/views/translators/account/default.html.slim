     p Account Info No Data State
   .editcontent
    .box.clearfix
     .span3
      .addphoto
     .span9
      .account-form
       form#editaccount-form
        fieldset
         label for=:fname First Name:
         input type=:text name=:fname id=:fname
        fieldset
         label for=:lname Last Name:
         input type=:text name=:lname id=:lname
        fieldset
         label for=:email Email Address:
         input type=:email name=:email id=:email
        fieldset.taxwrap
         label for=:tax Tax ID:
         input type=:text name=:tax id=:tax
        fieldset
         label for=:address1 Street Address 1:
         input type=:text name=:address1 id=:address1
        fieldset
         label for=:address2 Street Address 2:
         input type=:text name=:address1 id=:address2
        fieldset
         label for=:city City:
         input type=:text name=:city id=:city
        fieldset.clearfix
         .col.col1
          label for=:state State:
          input type=:text name=:state id=:state
         .col.col2
          label for=:zip ZIP/Post Code:
          input type=:text name=:zip id=:zip
         .col.col3
          label for=:country Country:
          input.coun type=:text value=:Australia name=:country id=:country
        fieldset.clearfix
         input.btn.btn-save.pull-right type=:submit value=:Save  
         input.btn.btn-cancel.pull-right type=:submit value=:Cancel
   .changepass
    .box.clearfix
     .col.col01.clearfix
      label for=:oldpass Original Password:
      input type=:password name=:oldpass id=:oldpass
     .col.col02.clearfix
      label for=:newpass New Password:
      input type=:password name=:newpass id=:newpass
     .col.col03.clearfix
      label for=:newpass2 Confirm New Password:
      input type=:password name=:newpass2 id=:newpass2
     .col.col04
       p 
        a.btn.btn-blue.btn-small href=:"#change" Change
       p 
        a.btn.btn-small href=:"#cancel" Cancel

